                                            <small>WorkingDir:</small>
                                            <span class="break">{{ con.WorkingDir}}</span>
                                        </li>
                                        <li v-for="env in con.Env">
                                            <small>Env:</small>
                                            <span class="break">{{ env }}</span>
                                        </li>
                                        <li v-if="con.Ports">
                                            <small>Ports:</small>
                                            <span>{{ con.Ports }}</span>
                                        </li>
                                        <li v-for="net in con.Networks">
                                            <small>Network:</small>
                                            <span>{{ net }}</span>
                                        </li>
                                        <li v-for="mount in con.Mounts">
